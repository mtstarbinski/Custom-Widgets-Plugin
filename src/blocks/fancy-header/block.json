{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "wordpress-plus/fancy-header",
    "title": "Fancy Header",
    "category": "text",
    "description": "Adds a header with a hover effect",
    "keywords": ["header", "underline", "hover"],
    "version": "1",
    "textdomain": "wordpress-plus",
    "editorScript": "file:./index.js",
    "style": "file:./index.css",
    "attributes": {
        "content": {
            "type": "string",
            "source": "html",
            "selector": "h2" 
        },
        "underline_color": {
            "type": "string",
            "default": "#f87171"
        }
    }
}
